.demo-text-1 {
    background: red;
}
.demo-text-2 {
    background: gold;
}
.demo-text-3 {
    background: blue;
}
.swiper {
    min-height: 1150rpx;
}
.swiper-item {
    height: auto;
    width: 100%;
}
.swiper-item image {
    width: 100%;
}
.scroll_view {
    height: 100vh;
}
.menus {
    margin: 40rpx 0;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.menus .menus_item {
    display: flex;
    flex: 1;
    flex-direction: column;
    align-items: center;
}
.menus .menus_item image {
    width: 72rpx;
    height: 72rpx;
}
.menus .menus_item text {
    font-family: PingFangSC-Medium;
    font-size: 24rpx;
    color: #100F0F;
    letter-spacing: 0;
    text-align: center;
}
.product {
    width: 100%;
}
.product .product_title {
    padding: 0 24rpx;
}
.product .product_title text {
    font-family: PingFangSC-Medium;
    font-size: 40rpx;
    color: #100F0F;
    letter-spacing: 0;
    display: block;
    line-height: 100rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.scroll_container {
    width: 100vw;
    height: auto;
    box-sizing: border-box;
    padding-bottom: 200rpx;
}